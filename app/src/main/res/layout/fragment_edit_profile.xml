<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="80dp"> <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:textColor="#A52A2A"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/editName"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/title"
            android:background="@drawable/bg_input_field"
            android:hint="Name"
            android:paddingHorizontal="16dp"/>

        <EditText
            android:id="@+id/editLocation"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/editName"
            android:background="@drawable/bg_input_field"
            android:hint="Location"
            android:paddingHorizontal="16dp"/>

        <TextView
            android:id="@+id/labelInterests"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Add Interests"
            app:layout_constraintTop_toBottomOf="@id/editLocation"
            app:layout_constraintStart_toStartOf="parent"/>

        <LinearLayout
            android:id="@+id/addInterestLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/labelInterests">
            <EditText
                android:id="@+id/etNewInterest"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/bg_input_field"
                android:paddingHorizontal="12dp"
                android:hint="e.g. Hiking"/>
            <Button
                android:id="@+id/btnAddInterest"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginStart="8dp"
                android:text="Add"
                android:backgroundTint="#A52A2A"/>
        </LinearLayout>

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/editInterestsChipGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/addInterestLayout"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <Button
        android:id="@+id/btnSaveProfile"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_gravity="bottom"
        android:layout_margin="20dp"
        android:backgroundTint="#FF8A8A"
        android:text="Save Changes"
        android:textColor="#FFFFFF"
        app:cornerRadius="30dp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>